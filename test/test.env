# Configuraci√≥n de entorno para pruebas
NODE_ENV=test

# Base de datos SQLite en memoria para pruebas
DATABASE_URL=sqlite::memory:
HOST=localhost
PORT_DATABASE=5432
USER_DATABASE=test
PASSWORD_DATABASE=test
NAME_DATABASE=test_db

# JWT para pruebas
JWT_SECRET=test-jwt-secret-key-for-testing-only

# Logging para pruebas
LOG_LEVEL=error

# Rate limiting para pruebas (valores altos para no interferir)
THROTTLE_TTL=1000
THROTTLE_LIMIT=100

# Email para pruebas (deshabilitado)
EMAIL_ENABLED=false
EMAIL_MOCK=true
